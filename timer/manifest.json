{
  "manifest_version": 3,
  "name": "Focus - Study Timer",
  "version": "1.0",
  "description": "Minimal Pomodoro timer for focused study sessions",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ding.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
